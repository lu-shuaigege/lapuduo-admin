    <title>商品管理</title>
    <style>
        .layui-table-cell {
            height: 40px;
            line-height: 40px;
        }
    </style>
</head>

<body>
    <nav class="breadcrumb">
        <i class="Hui-iconfont">&#xe67f;</i> 首页
        <span class="c-gray en">&gt;</span> 商品管理
        <span class="c-gray en">&gt;</span> 商品列表
        <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px"
            href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a>
    </nav>
    <div class="page-container">
        <div class="layui-form-item">
            <label class="layui-form-label xiug">商品一级分类：</label>
            <div class="layui-input-inline layui-form">
                <select lay-verify="category" lay-filter="category" name="category" id="category">
                    <option value="">请选择一级分类</option>
                    <option value="1">宝宝箱</option>
                    <option value="2">悉心喂养</option>
                    <option value="3">贴心护理</option>
                    <option value="4">暖心服饰</option>
                </select>
            </div>
            <button class="layui-btn" id="search" data-type="reload">搜索</button>
        </div>

        <div>
            <script type="text/html" id="btn">
                <button class="layui-btn" lay-event="add">添加</button>
            </script>
        </div>
        <table id="GoodsList" lay-filter="GoodsList"></table>
    </div>
    <script type="text/html" id="cao">
        <a class="layui-btn  layui-btn-sm" lay-event="edit">修改</a>
        <a class="layui-btn layui-btn-danger layui-btn-sm" lay-event="delshop">删除</a>
    </script>
    <script type="text/html" id="pic">
        {{# if (d.pic!== '') { }}  
        <img lay-event="pic" src="{{d.pic}}" alt="" width="100">
        {{# } else  { }}  
        {{# } }} 
    </script>
    <script type="text/html" id="categorys">
        {{# if (d.category=== 1) { }}  
        宝宝箱
        {{# } else if(d.category=== 2) { }}  
        悉心喂养
        {{# } else if(d.category=== 3) { }}  
        贴心护理
        {{# } else if(d.category=== 4) { }}  
        暖心服饰
        {{# } }}
    </script>
    <!--_footer 作为公共模版分离出去-->
    <script type="text/javascript" src="lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="lib/layer/2.4/layer.js"></script>
    <script type="text/javascript" src="static/h-ui/js/H-ui.min.js"></script>
    <script type="text/javascript" src="static/h-ui.admin/js/H-ui.admin.js"></script>
